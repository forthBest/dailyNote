
package com.hahahaha.offline.util;

import org.aspectj.lang.JoinPoint;
import org.aspectj.lang.annotation.Aspect;
import org.aspectj.lang.annotation.Before;
import org.springframework.stereotype.Component;


@Aspect
@Component
public class AopUtils {
  @Before("execution(* com.glaway.hahaha.chooseManage.controller.SubstituteManageController.*(..))")
  public void goAop(JoinPoint joinPoint){
    String c = joinPoint.getSignature().getName();
    System.out.println("前置消息执行"+c);
  }
  
  @After("execution(* com.glaway.hahaha.chooseManage.controller.SubstituteManageController.*(..))")
  public void goAop(JoinPoint joinPoint){
    String c = joinPoint.getSignature().getName();
    System.out.println("前置消息执行"+c);
  }
  
  @Around("execution(* com.glaway.hahaha.chooseManage.controller.SubstituteManageController.*(..))")
  public void goAop(JoinPoint joinPoint){
    String c = joinPoint.getSignature().getName();
    System.out.println("分支消息执行"+c);
	
	public void goAop3(JoinPoint joinPoint){
	    System.out.println("分支第四次提交"+c);
	}
	
	public void goAop4(JoinPoint joinPoint){
		System.out.println("附分支冲突合并"+c);
		System.out.println("解决合并冲突-我是主工程");
	}
}
